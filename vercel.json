{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" },
    { "src": "*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/server-db-shim.js", "dest": "/public/server-db-shim.js" },
    { "handle": "filesystem" },
    { "src": "(.*)", "dest": "/index.html" }
  ]
}
